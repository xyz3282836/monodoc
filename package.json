{
  "name": "monodoc",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "note:lint": "pnpm --filter=note lint",
    "blog:lint": "pnpm --filter=blog lint",
    "note:new": "mv ./packages/note/src/.vuepress ./packages/note/ && rm -fr ./packages/note/src && cp -r ~/sync/doc/ ./packages/note/src && mv ./packages/note/.vuepress ./packages/note/src/",
    "blog:new": "mv ./packages/blog/src/.vuepress ./packages/blog/ && rm -fr ./packages/blog/src && cp -r ~/sync/blog/ ./packages/blog/src && mv ./packages/blog/.vuepress ./packages/blog/src/",
    "acp": "git add ./ && git commit -m 'update doc' && git push",
    "note:build": "NODE_OPTIONS=--max-old-space-size=16384 pnpm --filter=note build:vite",
    "blog:build": "NODE_OPTIONS=--max-old-space-size=16384 pnpm --filter=blog build:vite",
    "blog:gen": "pnpm --filter=blog build:vite",
    "note:dev": "pnpm --filter=note dev:vite",
    "blog:dev": "pnpm --filter=blog dev:vite",
    "packages:check-update": "pnpm dlx npm-check-updates -u --deep --timeout 600000",
    "packages:update": "pnpm up -r"
  },
  "dependencies": {
    "@mathjax/src": "4.1.0",
    "@vuepress/bundler-vite": "2.0.0-rc.26",
    "@vuepress/bundler-webpack": "2.0.0-rc.26",
    "@vuepress/plugin-append-date": "2.0.0-rc.121",
    "@vuepress/plugin-cache": "2.0.0-rc.121",
    "@vuepress/plugin-slimsearch": "2.0.0-rc.121",
    "@vuepress/plugin-feed": "2.0.0-rc.121",
    "@vuepress/plugin-pwa": "2.0.0-rc.121",
    "@vuepress/plugin-revealjs": "2.0.0-rc.121",
    "@waline/client": "3.8.0",
    "flowchart.ts": "3.0.1",
    "mermaid": "11.12.2",
    "reveal.js": "5.2.1",
    "sass-embedded": "1.97.2",
    "sass-loader": "16.0.6",
    "vue": "3.5.26",
    "vuepress": "2.0.0-rc.26",
    "vuepress-theme-hope": "2.0.0-rc.102"
  },
  "devDependencies": {
    "cross-env": "10.1.0",
    "markdownlint-cli2": "0.20.0",
    "prettier": "3.7.4"
  },
  "packageManager": "pnpm@10.27.0"
}